<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="TabbedPageNavigation.Detalles">
    
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Informacion sobre nuestros jugadores" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <ListView x:Name="ListaPlayers" ItemsSource="{Binding players}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Image Source="{Binding Foto}" WidthRequest="200" HeightRequest="200" Aspect="AspectFit" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
                                <Label Text="{Binding Nombre}" FontSize="Large" HorizontalOptions="Center" />
                                <Label Text="{Binding Equipo}" FontSize="Medium" HorizontalOptions="Center" />
                                <Label Text="{Binding Edad}" FontSize="Medium" HorizontalOptions="Center" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>