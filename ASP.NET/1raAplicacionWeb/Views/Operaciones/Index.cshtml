@{
}
@using(Html.BeginForm("Sumar", "Operaciones", FormMethod.Post))
{
    <h1>Operaciones Basicas</h1>
    <br />

    <div class="form-floating mb-3">
        <input type="number" class="form-control" id="floatingUno" name="floatingUno" placeholder="" style="width: 250px">
      <label for="floatingUno">Número uno:</label>
    </div>

    <div class="form-floating">
        <input type="number" class="form-control" id="floatingDos" placeholder="" name="floatingDos" style="width: 250px">
      <label for="floatingDos">Número dos:</label>
    </div>
    <br />

    <button type="submit" name="operador" value="suma" class="btn btn-primary">Sumar</button>
    <button type="submit" name="operador" value="resta" class="btn btn-secondary">Restar</button>
    <button type="submit" name="operador" value="multi" class="btn btn-success">Multiplicar</button>
    <button type="submit" name="operador" value="divide" class="btn btn-danger">Dividir</button>
    <br />
    <br />

    <div class="form-floating mb-3">
        <input type="number" class="form-control" id="floatingResultado" placeholder="" style="width: 250px">
        <label for="floatingResultado">@ViewBag.floatingResultado</label>
    </div>
}
