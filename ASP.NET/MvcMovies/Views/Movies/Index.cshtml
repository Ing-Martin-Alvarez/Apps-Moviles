@model IEnumerable<MvcMovie.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white">Cinemas Yae</h1>

<p>
    <button class="btn btn-primary"><a asp-action="Create" class="nav-link text-white">Agregar a Cartelera</a></button>
</p>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                Titulo<!--@Html.DisplayNameFor(model => model.Title)-->
            </th>
            <th>
                Fecha de Estreno<!--@Html.DisplayNameFor(model => model.ReleaseDate)-->
            </th>
            <th>
                Genero<!--@Html.DisplayNameFor(model => model.Genre)-->
            </th>
            <th>
                Precio <!--@Html.DisplayNameFor(model => model.Price)-->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                 <button class="btn btn-success"><a asp-action="Edit" asp-route-id="@item.Id" class=" nav-link text-white">Edit</a></button> |
                 <button class=" btn btn-info"><a asp-action="Details" asp-route-id="@item.Id" class=" nav-link text-white">Details</a></button> |
                 <button class="btn btn-danger"><a asp-action="Delete" asp-route-id="@item.Id" class=" nav-link text-white">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>

<button id="btnImprimir" class="btn btn-secondary">Imprimir en PDF</button>

@section Scripts{
    <script>
        $("#btnImprimir").click(function () {
            window.location.href = '@Url.Action("ExportToPDF", "Movies")';
        });
    </script>
}
